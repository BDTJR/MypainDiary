<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/intensity_input_hint"
        android:layout_width="394dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Pain Intensity:"
        android:textSize="20sp" />

    <SeekBar
        android:id="@+id/pain_intensity"
        android:layout_width="341dp"
        android:layout_height="28dp"
        android:max="10"
        android:progress="0" />

    <TextView
        android:id="@+id/intensity_hint"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Current Level: 0 / 10"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/position_input_hint"
        android:layout_width="394dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Pain Location:"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/painLocation"
        android:layout_width="158dp"
        android:layout_height="37dp"
        android:entries="@array/position"
        android:spinnerMode="dialog" />

    <TextView
        android:id="@+id/mood_input_hint"
        android:layout_width="394dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Mood:"
        android:textSize="20sp" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/veryLow"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/btn_very_low_selector" />

        <ImageButton
            android:id="@+id/low"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/btn_low_selector" />

        <ImageButton
            android:id="@+id/average"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/btn_average_selector" />

        <ImageButton
            android:id="@+id/good"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/btn_good_selector" />

        <ImageButton
            android:id="@+id/verygood"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/btn_very_good_selector" />
    </LinearLayout>
    <TextView
        android:id="@+id/mood_hint"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Current mood: "
        android:textSize="14sp" />

    <TextView
        android:id="@+id/goal_input_hint"
        android:layout_width="394dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Goal of physical steps:"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editGoal"
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:hint="Enter a goal" />

        <Button
            android:id="@+id/addGoal"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:text="Add" />
    </LinearLayout>
    <TextView
        android:id="@+id/goal_hint"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Current goal: 10000 steps per day"
        android:textSize="14sp" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editSteps"
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:hint="Enter the taken steps today" />

        <Button
            android:id="@+id/addSteps"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:text="Add" />
    </LinearLayout>
    <TextView
        android:id="@+id/steps_hint"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Taken steps today: "
        android:textSize="14sp" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/edit"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:text="Edit" />

        <Button
            android:id="@+id/save"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:text="Save" />
    </LinearLayout>
</LinearLayout>
